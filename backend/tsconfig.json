{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "@/*": [ "./src/*" ]
        },

        /* Emit */
        "removeComments": true,
        "noEmitOnError": true,

        /* Interop Constraints */
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,

        /* Completeness */
        "skipLibCheck": true,
    },
    "include": [
        "./src/**/*.ts",
        "nexus-typegen.d.ts"
    ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
