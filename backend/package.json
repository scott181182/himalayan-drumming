{
    "name": "himalayan-drumming-research-server",
    "version": "1.0.0",
    "main": "dist/index.js",
    "author": "Scott Fasone",
    "license": "MIT",
    "scripts": {
        "generate": "yarn generate:prisma && yarn generate:nexus",
        "generate:prisma": "prisma generate",
        "generate:nexus": "ts-node --transpile-only ./src/graphql/index.ts",
        "generate:nexus:watch": "ts-node-dev --transpile-only --no-notify ./src/graphql/index.ts",

        "db:migrate": "prisma migrate dev",
        "db:seed": "ts-node ./src/scripts/db_seed.ts",

        "build": "tsc -p . --pretty"
    },
    "dependencies": {
        "@apollo/server": "^4.7.5",
        "@prisma/client": "^4.16.2",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "graphql": "^16.7.1",
        "nexus": "^1.3.0",
        "prisma": "^4.16.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/node": "^20.3.3",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "eslint": "^8.44.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.6"
    }
}
